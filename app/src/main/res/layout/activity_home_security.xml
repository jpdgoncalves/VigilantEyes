<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center_horizontal"
    tools:context=".Security.HomeSecurity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VigilantEyes Homepage"
            android:textSize="40dp"
            android:paddingBottom="20dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rota"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:text="Rota"
            android:drawableTop="@drawable/rota_icon"
            android:onClick="rotaBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:text="Reportar"
            android:drawableTop="@drawable/reportar_icon"
            android:onClick="reportarBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:text="Perfil"
            android:drawableTop="@drawable/profile_icon"
            android:onClick="perfilBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:text="Logout"
            android:drawableTop="@drawable/logout_icon"
            android:onClick="logoutBtnPressed"
            />

    </LinearLayout>











</RelativeLayout>