<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center_horizontal"
    tools:context=".Security.HomeSecurity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="@string/vigilanteyes_homepage"
            android:textAlignment="center"
            android:textSize="@dimen/title_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rota"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="@string/rota"
            android:drawableTop="@drawable/rota_icon"
            android:onClick="rotaBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="@string/reportar"
            android:drawableTop="@drawable/reportar_icon"
            android:onClick="reportarBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="@string/perfil"
            android:drawableTop="@drawable/profile_icon"
            android:onClick="perfilBtnPressed"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:text="@string/logout"
            android:drawableTop="@drawable/logout_icon"
            android:onClick="logoutBtnPressed"
            />

    </LinearLayout>


</RelativeLayout>